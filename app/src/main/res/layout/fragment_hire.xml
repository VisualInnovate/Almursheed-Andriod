<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_edit_text"
    tools:context=".home.view.tourist.hire.HireFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_edit_text">

        <com.visualinnovate.almursheed.common.AppBarView
            android:id="@+id/appBarHire"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3x"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarHire">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgHireBanner"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_banner_hire" />

            <TextView
                android:id="@+id/txtTripInfo"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_3x"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/destination"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/space_14x_sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imgHireBanner" />


            <LinearLayout
                android:id="@+id/destination_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/space_3x"
                android:paddingEnd="@dimen/space_3x"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/txtTripInfo">

                <CheckBox
                    android:id="@+id/inCityCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/in_city"
                    android:theme="@style/MyCheckboxStyle" />

                <CheckBox
                    android:id="@+id/betweenCityCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/between_cities"
                    android:theme="@style/MyCheckboxStyle" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtDate"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginTop="@dimen/space_4x"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="Date"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/space_14x_sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/destination_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/startDate"
                style="@style/EditTextStyleRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginVertical="@dimen/space_2x"
                android:background="@drawable/bg_rectangle_corner_grey_border"
                android:hint="@string/start_date"
                android:maxLines="1"
                android:padding="@dimen/space_3x"
                android:paddingStart="@dimen/space_3x"
                android:paddingEnd="@dimen/space_3x"
                android:shadowColor="@color/dark_grey"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/icSwitchDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/endDate"
                style="@style/EditTextStyleRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginVertical="@dimen/space_2x"
                android:background="@drawable/bg_rectangle_corner_grey_border"
                android:hint="@string/end_date"
                android:maxLines="1"
                android:padding="@dimen/space_3x"
                android:paddingStart="@dimen/space_4x"
                android:paddingEnd="@dimen/space_3x"
                android:shadowColor="@color/dark_grey"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icSwitchDate"
                app:layout_constraintTop_toBottomOf="@id/txtDate" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icSwitchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-18dp"
                android:layout_marginEnd="-18dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@id/endDate"
                app:layout_constraintEnd_toStartOf="@id/endDate"
                app:layout_constraintStart_toEndOf="@id/startDate"
                app:layout_constraintTop_toTopOf="@id/startDate"
                app:srcCompat="@drawable/ic_switch_arrow" />


            <TextView
                android:id="@+id/txtRouteInfo"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginTop="@dimen/space_4x"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/route_info"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/space_14x_sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/startDate" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/days_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2x"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/txtRouteInfo"
                tools:itemCount="3"
                tools:listitem="@layout/item_days" />


            <TextView
                android:id="@+id/txtWhatDoYouWantHire"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginTop="@dimen/space_4x"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/what_do_you_want_hire"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/space_14x_sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/days_recycler_view" />

            <TextView
                android:id="@+id/driver"
                style="@style/TextStyleRegular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3x"
                android:background="@drawable/bg_rectangle_corner_green_border"
                android:gravity="center"
                android:padding="@dimen/space_3x"
                android:text="@string/driver"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14x_sp"
                app:layout_constraintEnd_toStartOf="@id/guide"
                app:layout_constraintStart_toStartOf="@id/txtWhatDoYouWantHire"
                app:layout_constraintTop_toBottomOf="@id/txtWhatDoYouWantHire" />

            <TextView
                android:id="@+id/guide"
                style="@style/TextStyleRegular"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:background="@drawable/bg_rectangle_corner_grey_border"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="@dimen/space_3x"
                android:text="@string/guide"
                android:textColor="@color/grey"
                android:textSize="@dimen/space_14x_sp"
                app:layout_constraintBottom_toBottomOf="@id/driver"
                app:layout_constraintEnd_toEndOf="@id/txtWhatDoYouWantHire"
                app:layout_constraintStart_toEndOf="@id/driver"
                app:layout_constraintTop_toTopOf="@id/driver" />

            <TextView
                android:id="@+id/txtDriver"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginTop="@dimen/space_4x"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/drivers"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/space_14x_sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/driver" />


            <TextView
                android:id="@+id/chooseDriver"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginStart="@dimen/space_4x"
                android:layout_marginEnd="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_2x"
                android:padding="@dimen/space_3x"
                android:maxLines="1"
                android:hint="Choose a Driver"
                android:gravity="start|center_vertical"
                android:textSize="@dimen/space_16x_sp"
                android:background="@drawable/bg_rectangle_corner_grey_border"
                app:layout_constraintTop_toBottomOf="@id/txtDriver"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_3x"
                android:layout_marginTop="@dimen/space_5x"
                android:background="@drawable/bg_rectangle_corner_primary"
                android:padding="@dimen/space_1x"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/chooseDriver">

                <TextView
                    android:id="@+id/priceOfDay"
                    style="@style/TextStyleRegular"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/space_1x"
                    android:layout_marginStart="@dimen/space_3x"
                    android:background="@drawable/bg_rectangle_corner_primary"
                    android:gravity="start|center_vertical"
                    android:lines="2"
                    android:text="100 $ / DAY"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/totalPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/totalPrice"
                    style="@style/TextStyleRegular"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/space_3x"
                    android:layout_marginVertical="@dimen/space_1x"
                    android:gravity="end|center_vertical"
                    android:lines="1"
                    android:padding="@dimen/space_3x"
                    android:text="Total=700"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/priceOfDay"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHire"
                style="@style/customButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_4x"
                android:layout_marginTop="100dp"
                android:text="@string/next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintPrice" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>