<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_edit_text"
    tools:context=".auth.view.VerifyAccountFragment">

    <com.visualinnovate.almursheed.common.AppBarView
        android:id="@+id/appBarVerifyCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        style="@style/TextStyleRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_5x"
        android:layout_marginTop="@dimen/space_6x"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/space_1x"
        android:text="@string/a_verification_code_has_been_sent_to"
        android:textColor="@color/grey"
        android:textSize="@dimen/space_16x_sp"
        app:layout_constraintTop_toBottomOf="@id/appBarVerifyCode" />

    <TextView
        android:id="@+id/email"
        style="@style/TextStyleRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/space_1x"
        android:maxLines="1"
        android:textColor="@color/primary"
        android:textSize="@dimen/space_16x_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        tools:text="mohamed.nasar8710@gmail.com" />

    <TextView
        android:id="@+id/txt2"
        style="@style/TextStyleRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_2x"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/space_1x"
        android:textColor="@color/grey"
        android:textSize="@dimen/space_16x_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:text="@string/enter_the_code_below" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearOtpView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_10x"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/txt2">

        <EditText
            android:id="@+id/edtOtpBox1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="@dimen/space_5x"
            android:layout_weight="1"
            android:nextFocusDown="@id/edtOtpBox2"
            android:background="@drawable/background_highlighted"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/space_18x_sp" />

        <EditText
            android:id="@+id/edtOtpBox2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:nextFocusDown="@id/edtOtpBox3"
            android:background="@drawable/background_highlighted"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/space_18x_sp" />

        <EditText
            android:id="@+id/edtOtpBox3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="@dimen/space_5x"
            android:layout_weight="1"
            android:nextFocusDown="@id/edtOtpBox4"
            android:background="@drawable/background_highlighted"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/space_18x_sp"
            tools:text="1" />

        <EditText
            android:id="@+id/edtOtpBox4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_highlighted"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/space_18x_sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/txtResendCode"
        style="@style/TextStyleRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_6x"
        android:layout_marginTop="@dimen/space_2x"
        android:drawablePadding="@dimen/space_4x"
        android:gravity="start"
        android:padding="@dimen/space_4x"
        android:text="@string/resend_code_in"
        android:textColor="@color/black"
        android:textSize="@dimen/space_16x_sp"
        app:drawableStartCompat="@drawable/ic_resend_code"
        app:layout_constraintTop_toBottomOf="@id/linearOtpView" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerify"
        style="@style/customButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_2x"
        android:text="@string/verify"
        app:layout_constraintBottom_toTopOf="@id/resendCode" />

    <TextView
        android:id="@+id/resendCode"
        style="@style/TextStyleRegular"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/space_3x"
        android:gravity="center"
        android:padding="@dimen/space_4x"
        android:text="@string/didn_t_get_the_code_resend_code"
        android:textColor="@color/grey"
        android:textSize="@dimen/space_14x_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>