<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_4x"
    android:layout_marginTop="@dimen/space_2x"
    android:layout_marginEnd="@dimen/space_4x"
    android:layout_marginBottom="@dimen/space_3x"
    app:cardCornerRadius="@dimen/space_2x"
    app:cardElevation="@dimen/space_1x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/status"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3x"
            android:background="@color/light_green"
            android:paddingStart="@dimen/space_4x"
            android:paddingTop="@dimen/space_1x"
            android:paddingEnd="@dimen/space_4x"
            android:paddingBottom="@dimen/space_1x"
            android:textColor="@color/white"
            android:textSize="@dimen/space_14x_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Active" />

        <TextView
            android:id="@+id/txtTripInfo"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/ticket_info"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_16x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status" />

        <TextView
            android:id="@+id/txtCountry"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_5x"
            android:text="@string/countryy"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTripInfo" />

        <TextView
            android:id="@+id/country"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egypt"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/txtCountry"
            app:layout_constraintTop_toTopOf="@id/txtCountry" />

        <TextView
            android:id="@+id/txtDateOfEntry"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/ticket_id"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCountry" />

        <TextView
            android:id="@+id/ticketId"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtDateOfEntry"
            app:layout_constraintTop_toTopOf="@id/txtDateOfEntry"
            tools:text="10-09-2022" />

        <TextView
            android:id="@+id/txtDateOfExit"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/typee"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDateOfEntry" />

        <TextView
            android:id="@+id/type"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtDateOfExit"
            app:layout_constraintTop_toTopOf="@id/txtDateOfExit"
            tools:text="11-09-2022" />

        <TextView
            android:id="@+id/txtTotalPrice"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/priorityy"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type" />

        <TextView
            android:id="@+id/priority"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtTotalPrice"
            app:layout_constraintTop_toTopOf="@id/txtTotalPrice"
            tools:text="300 $" />

        <TextView
            android:id="@+id/txtSubject"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/subjectt"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTotalPrice" />

        <TextView
            android:id="@+id/subject"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtTotalPrice"
            app:layout_constraintTop_toTopOf="@id/txtSubject"
            tools:text="300 $" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_4x"
            android:layout_marginEnd="@dimen/space_3x"
            android:background="#DAD9D9"
            app:layout_constraintTop_toBottomOf="@id/subject" />

        <TextView
            android:id="@+id/txtAllDetails"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_1x"
            android:drawablePadding="@dimen/space_2x"
            android:paddingVertical="@dimen/space_2x"
            android:text="@string/all_details"
            android:textColor="@color/accent"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_red_arrow_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>