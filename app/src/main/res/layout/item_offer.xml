<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_marginVertical="@dimen/space_3x"
    android:layout_marginEnd="@dimen/space_2x"
    app:cardCornerRadius="@dimen/space_4x"
    app:cardElevation="@dimen/space_1x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgOffer"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_test" />

        <TextView
            android:id="@+id/offerRating"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3x"
            android:background="@drawable/ic_bg_rating"
            android:drawablePadding="@dimen/space_1_5x"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/space_2x"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/ic_star"
            app:layout_constraintEnd_toEndOf="@id/imgOffer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4.0" />

        <TextView
            android:id="@+id/offerName"
            style="@style/TextStyleRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_3x"
            android:ellipsize="end"
            android:gravity="start"
            android:lineSpacingExtra="@dimen/space_2x"
            android:lines="2"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/white"
            android:textSize="@dimen/space_24x_sp"
            app:layout_constraintEnd_toStartOf="@id/offerRating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/offerRating"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Taking a boat tour through Canals" />

        <TextView
            android:id="@+id/details"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space_2x"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/space_3x"
            android:paddingVertical="@dimen/space_2x"
            android:text="@string/details"
            android:textColor="@color/white"
            android:textSize="@dimen/space_14x_sp"
            app:drawableEndCompat="@drawable/ic_arrow_stroke"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/offerName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBookNow"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/space_1x"
            android:background="@drawable/bg_btn_book_now_offer"
            android:text="@string/book_now"
            android:textColor="@color/primary"
            android:textSize="@dimen/space_12x_sp"
            app:layout_constraintBottom_toBottomOf="@id/details"
            app:layout_constraintEnd_toStartOf="@id/details"
            app:layout_constraintTop_toTopOf="@id/details" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>