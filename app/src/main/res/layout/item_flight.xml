<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_4x"
    android:layout_marginVertical="@dimen/space_2x"
    android:background="@drawable/bg_item_flight"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/flightName"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_4x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/space_16x_sp"
        app:layout_constraintEnd_toStartOf="@id/imgFlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Egypt Air Line" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFlight"
        android:layout_width="@dimen/space_30x"
        android:layout_height="@dimen/space_6x"
        android:layout_margin="@dimen/space_4x"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_egypt_air" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgDotsLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_5x"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/flightName"
        app:srcCompat="@drawable/img_dots_line" />

    <TextView
        android:id="@+id/flightDiscount"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_marginTop="@dimen/space_2x"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:textColor="@color/primary"
        android:textSize="@dimen/space_16x_sp"
        app:layout_constraintBottom_toBottomOf="@id/btnBookNow"
        app:layout_constraintEnd_toStartOf="@id/btnBookNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgDotsLine"
        tools:text="Discount 30%" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBookNow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_10x"
        android:layout_marginHorizontal="@dimen/space_4x"
        android:layout_marginVertical="@dimen/space_3x"
        android:background="@drawable/btn_selector"
        android:textAllCaps="false"
        android:fontFamily="@font/myriad_pro_bold"
        android:paddingHorizontal="@dimen/space_5x"
        android:text="@string/book_now"
        android:textColor="@color/white"
        android:textSize="@dimen/space_16x_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/flightDiscount"
        app:layout_constraintTop_toBottomOf="@id/imgDotsLine" />

</androidx.constraintlayout.widget.ConstraintLayout>