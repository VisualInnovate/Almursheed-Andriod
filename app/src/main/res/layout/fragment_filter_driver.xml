<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_edit_text">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4x"
            android:layout_marginTop="@dimen/space_4x"
            android:layout_marginEnd="@dimen/space_4x"
            android:layout_marginBottom="@dimen/space_10x"
            android:background="@drawable/bg_rectangle_corner_white"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtCarCategory"
                style="@style/TextStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_5x"
                android:text="@string/car_category"
                android:textColor="@color/grey"
                android:textSize="@dimen/space_16x_sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/car_category"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_3x"
                android:layout_marginEnd="@dimen/space_4x"
                android:background="@drawable/bg_item_spinner_selected_with_ic_down"
                android:gravity="center_vertical"
                android:text="@string/all"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14x_sp"
                app:layout_constraintTop_toBottomOf="@id/txtCarCategory" />

            <TextView
                android:id="@+id/txtCarModel"
                style="@style/TextStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_5x"
                android:text="@string/car_model"
                android:textColor="@color/grey"
                android:textSize="@dimen/space_16x_sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/car_category" />

            <TextView
                android:id="@+id/car_model"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_3x"
                android:layout_marginEnd="@dimen/space_4x"
                android:background="@drawable/bg_item_spinner_selected_with_ic_down"
                android:gravity="center_vertical"
                android:text="@string/all"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14x_sp"
                app:layout_constraintTop_toBottomOf="@id/txtCarModel" />

            <TextView
                android:id="@+id/txtRating"
                style="@style/TextStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_5x"
                android:text="@string/rating"
                android:textColor="@color/grey"
                android:textSize="@dimen/space_16x_sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/car_model" />


            <TextView
                android:id="@+id/rate"
                style="@style/TextStyleRegular"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/space_4x"
                android:layout_marginTop="@dimen/space_3x"
                android:layout_marginEnd="@dimen/space_4x"
                android:background="@drawable/bg_item_spinner_selected_with_ic_down"
                android:gravity="center_vertical"
                android:text="@string/all"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14x_sp"
                app:layout_constraintTop_toBottomOf="@id/txtRating" />


            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_3x"
                android:layout_marginTop="@dimen/space_7x"
                android:layout_marginEnd="@dimen/space_3x"
                android:max="2000"
                android:progress="10"
                app:layout_constraintTop_toBottomOf="@id/rate" />

            <TextView
                android:id="@+id/txtStartPrice"
                style="@style/TextStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5x"
                android:layout_marginTop="@dimen/space_3x"
                android:text="0 $"
                android:textColor="@color/grey"
                android:textSize="@dimen/space_16x_sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price" />

            <TextView
                android:id="@+id/txtEndPrice"
                style="@style/TextStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3x"
                android:layout_marginEnd="@dimen/space_5x"
                android:text="2000 $"
                android:textColor="@color/grey"
                android:textSize="@dimen/space_16x_sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSearch"
                style="@style/customButtonStyle"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8x"
                android:layout_marginBottom="@dimen/space_4x"
                android:text="@string/search"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStartPrice" />


        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>