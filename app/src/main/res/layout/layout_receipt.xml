<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_receipt"
    tools:context=".home.view.tourist.hire.ReceiptDialog">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_2x"
        android:padding="@dimen/space_4x"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPriceInfo"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/receipt_info"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_18x_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnClose" />

    <TextView
        android:id="@+id/txtPricePerDay"
        style="@style/TextStyleRegular"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/price_per_day"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPriceInfo" />

    <TextView
        android:id="@+id/pricePerDay"
        style="@style/TextStyleBold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/dollar"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/txtPricePerDay"
        app:layout_constraintTop_toBottomOf="@id/txtPriceInfo" />

    <TextView
        android:id="@+id/txtDiscount"
        style="@style/TextStyleRegular"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/discount"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPricePerDay" />


    <TextView
        android:id="@+id/discount"
        style="@style/TextStyleBold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/discountt"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/txtDiscount"
        app:layout_constraintTop_toTopOf="@id/txtDiscount" />

    <TextView
        android:id="@+id/txtFrom"
        style="@style/TextStyleRegular"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/from"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDiscount" />


    <TextView
        android:id="@+id/from"
        style="@style/TextStyleBold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/discountt"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txtFrom"
        app:layout_constraintTop_toTopOf="@id/txtFrom" />

    <TextView
        android:id="@+id/txtTo"
        style="@style/TextStyleRegular"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/to"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtFrom" />


    <TextView
        android:id="@+id/to"
        style="@style/TextStyleBold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/discountt"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txtTo"
        app:layout_constraintTop_toTopOf="@id/txtTo" />


    <TextView
        android:id="@+id/txtFees"
        style="@style/TextStyleRegular"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/fees"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTo" />


    <TextView
        android:id="@+id/fees"
        style="@style/TextStyleBold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/dollar"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txtFees"
        app:layout_constraintTop_toTopOf="@id/txtFees" />


    <TextView
        android:id="@+id/txtTaxes"
        style="@style/TextStyleRegular"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/taxes"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtFees" />


    <TextView
        android:id="@+id/taxes"
        style="@style/TextStyleBold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/dollar"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txtTaxes"
        app:layout_constraintTop_toTopOf="@id/txtTaxes" />

    <TextView
        android:id="@+id/txtSubTotal"
        style="@style/TextStyleRegular"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/sub_total"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTaxes" />

    <TextView
        android:id="@+id/subTotal"
        style="@style/TextStyleBold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/dollar"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_14x_sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txtSubTotal"
        app:layout_constraintTop_toTopOf="@id/txtSubTotal" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/space_6x"
        android:layout_marginTop="@dimen/space_3x"
        android:layout_marginEnd="@dimen/space_6x"
        android:background="@drawable/dot_background"
        app:layout_constraintTop_toBottomOf="@id/subTotal" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_3x"
        android:layout_marginTop="@dimen/space_5x"
        android:background="@drawable/bg_rectangle_corner_primary"
        android:padding="@dimen/space_1x"
        app:layout_constraintTop_toBottomOf="@id/subTotal">

        <TextView
            android:id="@+id/numOfDay"
            style="@style/TextStyleRegular"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/space_1x"
            android:layout_marginStart="@dimen/space_3x"
            android:background="@drawable/bg_rectangle_corner_primary"
            android:gravity="start|center_vertical"
            android:lines="2"
            android:text="@string/total_"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/totalPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalPrice"
            style="@style/TextStyleRegular"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/space_3x"
            android:layout_marginVertical="@dimen/space_1x"
            android:gravity="end|center_vertical"
            android:lines="1"
            android:padding="@dimen/space_3x"
            android:text="@string/total_equal"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/numOfDay"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHire"
        style="@style/customButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_3x"
        android:layout_marginVertical="@dimen/space_6x"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintPrice" />



    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9FFFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>