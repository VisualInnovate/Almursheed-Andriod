<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_3x"
    android:layout_marginStart="@dimen/space_2x"
    app:cardCornerRadius="@dimen/space_3x"
    app:cardElevation="@dimen/space_1x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgAccommodation"
            app:layout_constraintEnd_toEndOf="@+id/imgAccommodation"
            app:layout_constraintStart_toStartOf="@+id/imgAccommodation"
            app:layout_constraintTop_toTopOf="@+id/imgAccommodation" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgAccommodation"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_home_logo" />

        <TextView
            android:id="@+id/accommodationName"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_1x"
            android:layout_marginTop="@dimen/space_3x"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/space_10x_sp"
            app:layout_constraintEnd_toStartOf="@id/imgFavorite"
            app:layout_constraintStart_toEndOf="@id/imgAccommodation"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ahmed khaled" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFavorite"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_3x"
            android:layout_marginStart="@dimen/space_1x"
            android:layout_marginTop="@dimen/space_1x"
            android:layout_marginEnd="@dimen/space_1_5x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/accommodationName"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_un_favorite" />

        <TextView
            android:id="@+id/countryAndCity"
            style="@style/TextStyleRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_1x"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/space_10x_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgAccommodation"
            app:layout_constraintTop_toBottomOf="@id/accommodationName"
            tools:text="Egypt, Cairo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgGoogleMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_2x"
            android:layout_marginVertical="@dimen/space_1x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/countryAndCity"
            app:srcCompat="@drawable/ic_google_map" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>