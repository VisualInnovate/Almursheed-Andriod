<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_edit_text">


    <com.visualinnovate.almursheed.common.AppBarView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_marginTop="@dimen/space_5x"
        android:layout_marginEnd="@dimen/space_4x"
        android:layout_marginBottom="@dimen/space_2x"
        app:cardCornerRadius="@dimen/space_2x"
        app:cardElevation="@dimen/space_1x"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_4x">

            <TextView
                android:id="@+id/txtSelectPrices"
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_your_prices"
                android:textColor="@color/black"
                android:textSize="@dimen/space_16x_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <include
                android:id="@+id/spinner_cities"
                layout="@layout/layout_spinner_bg_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4x"
                app:layout_constraintEnd_toStartOf="@id/price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSelectPrices" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/price"
                style="@style/EditTextStyleRegular"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/enter_price"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/space_16x_sp"
                android:inputType="number"
                android:maxEms="4"
                app:layout_constraintBottom_toBottomOf="@id/spinner_cities"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/spinner_cities"
                app:layout_constraintTop_toTopOf="@id/spinner_cities" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pricesRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3x"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/spinner_cities"
                tools:itemCount="4"
                tools:listitem="@layout/item_price" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                style="@style/customButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_4x"
                android:text="@string/update"
                app:layout_constraintTop_toBottomOf="@id/pricesRV" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>