<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_edit_text"
    tools:context=".commonView.contactUs.TicketDetailsFragment">

    <com.visualinnovate.almursheed.common.AppBarView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/space_3x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4x"
            android:layout_marginTop="@dimen/space_2x"
            android:layout_marginEnd="@dimen/space_4x"
            app:cardCornerRadius="@dimen/space_2x"
            app:cardElevation="@dimen/space_1x">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8x">

                <TextView
                    android:id="@+id/txtTripInfo"
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_3x"
                    android:layout_marginTop="@dimen/space_3x"
                    android:text="@string/ticket_info"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/space_16x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtCountry"
                    style="@style/TextStyleRegular"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_3x"
                    android:layout_marginTop="@dimen/space_5x"
                    android:text="@string/countryy"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtTripInfo" />

                <TextView
                    android:id="@+id/country"
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/txtCountry"
                    app:layout_constraintTop_toTopOf="@id/txtCountry"
                    tools:text="Egypt" />

                <TextView
                    android:id="@+id/txtDateOfEntry"
                    style="@style/TextStyleRegular"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_3x"
                    android:layout_marginTop="@dimen/space_3x"
                    android:text="@string/ticket_id"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtCountry" />

                <TextView
                    android:id="@+id/ticketId"
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/txtDateOfEntry"
                    app:layout_constraintTop_toTopOf="@id/txtDateOfEntry"
                    tools:text="10-09-2022" />

                <TextView
                    android:id="@+id/txtDateOfExit"
                    style="@style/TextStyleRegular"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_3x"
                    android:layout_marginTop="@dimen/space_3x"
                    android:text="@string/typee"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtDateOfEntry" />

                <TextView
                    android:id="@+id/type"
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/txtDateOfExit"
                    app:layout_constraintTop_toTopOf="@id/txtDateOfExit"
                    tools:text="11-09-2022" />

                <TextView
                    android:id="@+id/txtTotalPrice"
                    style="@style/TextStyleRegular"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_3x"
                    android:layout_marginTop="@dimen/space_3x"
                    android:text="@string/priorityy"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/type" />

                <TextView
                    android:id="@+id/priority"
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/txtTotalPrice"
                    app:layout_constraintTop_toTopOf="@id/txtTotalPrice"
                    tools:text="300 $" />

                <TextView
                    android:id="@+id/txtSubject"
                    style="@style/TextStyleRegular"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_3x"
                    android:layout_marginTop="@dimen/space_3x"
                    android:text="@string/subjectt"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtTotalPrice" />

                <TextView
                    android:id="@+id/subject"
                    style="@style/TextStyleRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/txtTotalPrice"
                    app:layout_constraintTop_toTopOf="@id/txtSubject"
                    tools:text="300 $" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTicketConversation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_1_5x"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/txtSubject"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_ticket_conversation" />

                <TextView
                    android:id="@+id/txtReplay"
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_3x"
                    android:layout_marginTop="@dimen/space_4x"
                    android:text="@string/replay"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14x_sp"
                    app:layout_constraintTop_toBottomOf="@id/rvTicketConversation" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtReplay"
                    style="@style/EditTextStyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_35x"
                    android:layout_marginTop="@dimen/space_3x"
                    android:layout_marginHorizontal="@dimen/space_3x"
                    android:background="@drawable/bg_rectangle_corner_blue"
                    android:gravity="top"
                    android:hint="@string/write_your_message"
                    android:inputType="text"
                    android:padding="@dimen/space_5x"
                    android:textColorHint="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/txtReplay" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSend"
                    style="@style/customButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5x"
                    android:text="@string/send"
                    app:layout_constraintTop_toBottomOf="@+id/edtReplay"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>