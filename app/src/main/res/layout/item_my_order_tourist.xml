<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_4x"
    android:layout_marginTop="@dimen/space_2x"
    android:layout_marginEnd="@dimen/space_4x"
    android:layout_marginBottom="@dimen/space_3x"
    app:cardCornerRadius="@dimen/space_2x"
    app:cardElevation="@dimen/space_1x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/status"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3x"
            android:background="@color/light_green"
            android:paddingStart="@dimen/space_4x"
            android:paddingTop="@dimen/space_1x"
            android:paddingEnd="@dimen/space_4x"
            android:paddingBottom="@dimen/space_1x"
            android:textColor="@color/white"
            android:textSize="@dimen/space_14x_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Active" />

        <TextView
            android:id="@+id/txtTripInfo"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/trip_info"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_16x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status" />

        <TextView
            android:id="@+id/txtCountry"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_5x"
            android:text="@string/countryy"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTripInfo" />

        <TextView
            android:id="@+id/country"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egypt"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtCountry"
            app:layout_constraintTop_toTopOf="@id/txtCountry" />

        <TextView
            android:id="@+id/txtDateOfEntry"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/start_of_trip"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCountry" />

        <TextView
            android:id="@+id/entryDate"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-09-2022"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtDateOfEntry"
            app:layout_constraintTop_toTopOf="@id/txtDateOfEntry" />

        <TextView
            android:id="@+id/txtDateOfExit"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/end_of_trip"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDateOfEntry" />

        <TextView
            android:id="@+id/exitDate"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11-09-2022"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtDateOfExit"
            app:layout_constraintTop_toTopOf="@id/txtDateOfExit" />

        <TextView
            android:id="@+id/txtTotalPrice"
            style="@style/TextStyleRegular"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_3x"
            android:text="@string/total_price"
            android:textColor="@color/grey"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exitDate" />

        <TextView
            android:id="@+id/price"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 $"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtTotalPrice"
            app:layout_constraintTop_toTopOf="@id/txtTotalPrice" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddRate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_10x"
            android:src="@drawable/ic_group_rate"
            android:layout_marginBottom="@dimen/space_3x"
            android:gravity="center"
            android:visibility="gone"
            style="@style/customButtonStyle"
            android:text="@string/add_rate"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_4x"
            android:layout_marginEnd="@dimen/space_3x"
            android:background="#DAD9D9"
            app:layout_constraintTop_toBottomOf="@id/price" />

        <TextView
            android:id="@+id/txtAllDetails"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_1x"
            android:paddingVertical="@dimen/space_2x"
            android:text="@string/all_details"
            android:drawablePadding="@dimen/space_2x"
            android:textColor="@color/accent"
            android:textSize="@dimen/space_14x_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:drawableEndCompat="@drawable/ic_red_arrow_right" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPaid"
            style="@style/customButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_2x"
            android:layout_marginVertical="@dimen/space_3x"
            android:text="@string/paid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCancel"
            app:layout_constraintTop_toBottomOf="@id/txtAllDetails" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            style="@style/customButtonStyleRoundedBorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/space_3x"
            android:text="@string/cancel"
            android:padding="@dimen/space_2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnPaid"
            app:layout_constraintTop_toBottomOf="@id/txtAllDetails"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>