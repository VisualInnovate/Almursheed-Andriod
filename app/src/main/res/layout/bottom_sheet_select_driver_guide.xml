<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheet_curve_edge">


    <TextView
        android:id="@+id/txtChoose"
        style="@style/TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_3x"
        android:layout_marginTop="@dimen/space_5x"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/choose_a"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/space_18x_sp"
        android:textStyle="bold"
       app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drivers_guides_RV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_2x"
        android:layout_marginTop="@dimen/space_4x"
        android:layout_marginStart="@dimen/space_6x"
        app:layout_constraintTop_toBottomOf="@+id/txtChoose"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_driver_guide"/>


</androidx.constraintlayout.widget.ConstraintLayout>