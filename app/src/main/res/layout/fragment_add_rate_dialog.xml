<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_corner_white"
    tools:context=".commonView.myOrders.view.AddRateDialogFragment">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5x"
        android:gravity="center"
        android:textColor="@color/primary"
        android:textSize="@dimen/space_18x_sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="what_do_you_opinion_about_the_place" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_10x"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="@color/shimmer_placeholder"
        android:stepSize="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt1" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtRateComment"
        style="@style/EditTextStyleRegular"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_35x"
        android:layout_marginHorizontal="@dimen/space_5x"
        android:layout_marginTop="@dimen/space_3x"
        android:background="@drawable/bg_rectangle_corner_blue"
        android:gravity="top"
        android:hint="@string/write_your_rate_here"
        android:inputType="text"
        android:padding="@dimen/space_5x"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingBar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        style="@style/customButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_4x"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtRateComment" />

</androidx.constraintlayout.widget.ConstraintLayout>