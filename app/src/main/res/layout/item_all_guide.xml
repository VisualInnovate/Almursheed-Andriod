<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/space_2x"
    android:layout_marginStart="@dimen/space_2x"
    app:cardCornerRadius="@dimen/space_4x"
    app:cardElevation="@dimen/space_1x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imgLocation"
        android:layout_width="180dp"
        android:layout_height="160dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgGuide"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="@dimen/space_3x"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:srcCompat="@drawable/img_driver" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_2x"
            android:padding="@dimen/space_3x"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:srcCompat="@drawable/ic_un_favorite" />

        <TextView
            android:id="@+id/rating"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-4dp"
            android:background="@drawable/ic_bg_item_see_all_guide"
            android:drawablePadding="@dimen/space_1x"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="@dimen/space_2x"
            android:text="0.0"
            android:textColor="@color/white"
            android:textSize="@dimen/space_9x_sp"
            app:drawableStartCompat="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@id/imgGuide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/guideName"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_3x"
            android:layout_marginTop="@dimen/space_2x"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/space_12x_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating"
            tools:text="Ahmed khaled " />

        <TextView
            android:id="@+id/city"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_2x"
            android:layout_marginTop="@dimen/space_2x"
            android:drawablePadding="@dimen/space_1x"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/space_10x_sp"
            app:drawableStartCompat="@drawable/ic_location_primary"
            app:layout_constraintEnd_toStartOf="@id/price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideName"
            tools:text="Cairo" />

        <TextView
            android:id="@+id/price"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_1_5x"
            android:layout_marginEnd="@dimen/space_3x"
            android:drawablePadding="@dimen/space_1x"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/space_10x_sp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_money_dollar_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city"
            app:layout_constraintTop_toBottomOf="@id/guideName"
            tools:text="$00.00" />

        <TextView
            android:id="@+id/language"
            style="@style/TextStyleRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_3x"
            android:drawablePadding="@dimen/space_1x"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/space_11x_sp"
            app:drawableStartCompat="@drawable/ic_country"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city"
            tools:text="English, Arabic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>