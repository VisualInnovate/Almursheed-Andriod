    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:popupBackground="@color/white"
        android:spinnerMode="dropdown"
        android:paddingStart="@dimen/space_3x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spinnerText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_14x"
        android:background="@drawable/bg_rectangle_corner_grey_border"
        android:enabled="false"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/space_4x"
        android:paddingVertical="@dimen/space_2x"
        android:textColor="@color/grey"
        android:textSize="@dimen/space_14x_sp"
        app:drawableEndCompat="@drawable/bg_spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="select_your" />


